<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_detail_nav"
    app:startDestination="@id/cardDetailFragment">

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="sam.g.trackuriboh.ui.card_detail.CardDetailFragment"
        tools:layout="@layout/fragment_card_detail">
        <argument
            android:name="cardId"
            app:argType="long" />
        <action
            android:id="@+id/action_cardDetailFragment_to_cardSetDetailActivity"
            app:destination="@id/cardSetDetailActivity" />
        <action
            android:id="@+id/action_cardDetailFragment_to_cardPrintingsActivity"
            app:destination="@id/cardPrintingsActivity" />
        <action
            android:id="@+id/action_cardDetailFragment_to_addToUserListBottomSheetFragment"
            app:destination="@id/addToUserListBottomSheetFragment" />

    </fragment>

    <activity
        android:id="@+id/cardPrintingsActivity"
        android:name="sam.g.trackuriboh.ui.card_printings.CardPrintingsActivity"
        tools:layout="@layout/fragment_card_list">
        <argument
            android:name="cardName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </activity>
    <activity
        android:id="@+id/cardSetDetailActivity"
        android:name="sam.g.trackuriboh.ui.card_set_detail.CardSetDetailActivity"
        tools:layout="@layout/fragment_card_set_detail">
        <argument
            android:name="setId"
            app:argType="long" />
    </activity>
    <dialog
        android:id="@+id/addToUserListBottomSheetFragment"
        android:name="sam.g.trackuriboh.ui.user_list.AddToUserListDialogFragment"
        tools:layout="@layout/dialog_add_to_user_list">
        <action
            android:id="@+id/action_addToUserListBottomSheetFragment_to_userListSelectionBottomSheetFragment"
            app:destination="@id/userListSelectionBottomSheetFragment" />
        <action
            android:id="@+id/action_addToUserListBottomSheetFragment_to_skuSelectionBottomSheetFragment"
            app:destination="@id/skuSelectionBottomSheetFragment" />
        <argument
            android:name="cardId"
            app:argType="long" />
    </dialog>

    <dialog
        android:id="@+id/userListSelectionBottomSheetFragment"
        android:name="sam.g.trackuriboh.ui.user_list.UserListSelectionBottomSheetFragment" />

    <dialog
        android:id="@+id/skuSelectionBottomSheetFragment"
        android:name="sam.g.trackuriboh.ui.card_detail.SkuSelectionBottomSheetFragment" >
        <argument
            android:name="cardId"
            app:argType="long" />
    </dialog>
</navigation>
