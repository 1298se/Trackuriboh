<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_printings_nav_graph"
    app:startDestination="@id/cardListFragment">

    <fragment
        android:id="@+id/cardListFragment"
        android:name="sam.g.trackuriboh.ui_database.CardListFragment"
        android:label="Printings"
        tools:layout="@layout/fragment_card_list">
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <action
            android:id="@+id/action_cardListFragment_to_cardDetailActivity"
            app:destination="@id/cardDetailActivity" />
    </fragment>
    <activity
        android:id="@+id/cardDetailActivity"
        android:name="sam.g.trackuriboh.ui_card_detail.CardDetailActivity"
        tools:layout="@layout/fragment_card_detail">
        <argument
            android:name="cardId"
            app:argType="long" />
    </activity>

</navigation>