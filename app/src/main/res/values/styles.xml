<resources>

    <!-- Components -->
    <style name="Widget.AppTheme.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="queryBackground">@drawable/bg_surface_rounded</item>
        <item name="submitBackground">@drawable/bg_surface_rounded</item>
        <item name="android:background">@drawable/bg_surface_rounded</item>
    </style>

    <style name="Widget.AppTheme.SearchView.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.LinearProgressIndicator
        </item>
    </style>

    <style name="ImageSliderViewPager" parent="">
        <item name="android:paddingTop">@dimen/card_image_swipe_padding</item>
        <item name="android:paddingBottom">@dimen/card_image_swipe_padding</item>
    </style>

    <style name="ImageSliderTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/image_slider_tab_selector</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">@dimen/image_slider_width</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Widget.AppTheme.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.AppTheme.Button.IconOnly.PrimaryAlpha" parent="Widget.AppTheme.Button.IconOnly">
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="backgroundTint">@color/icon_button_color_primary_alpha_selector</item>
    </style>

    <style name="Widget.AppTheme.Button.IconOnly.Surface" parent="Widget.AppTheme.Button.IconOnly">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">324dp</item>
    </style>

    <style name="AppTheme.CardViewRecyclerView" parent="">
        <item name="android:padding">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.AppTheme.Toolbar.SearchView.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <!-- This decreases the padding between the searchview and the back button -->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">16dp</item>
    </style>

    <style name="Widget.AppTheme.Toolbar.SearchView.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- This decreases the padding between the searchview and the back button -->
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">16dp</item>
    </style>

    <style name="Widget.AppTheme.Button.Surface" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.Button.Surface</item>
    </style>
</resources>
