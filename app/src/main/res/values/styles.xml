<resources>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.ExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Components -->
    <style name="Widget.AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorPrimaryDark</item>
        <item name="tabTextColor">?attr/colorPrimary</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.AppTheme.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.AppTheme.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.LinearProgressIndicator</item>
    </style>

    <style name="ThemeOverlay.AppTheme.LinearProgressIndicator" parent="">
        <item name="colorPrimary">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_outlined_states</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_states</item>
        <item name="itemTextColor">@color/bottom_nav_states</item>
    </style>

    <style name="ImageSliderViewPager" parent="">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:paddingTop">@dimen/card_image_swipe_padding</item>
        <item name="android:paddingBottom">@dimen/card_image_swipe_padding</item>
    </style>

    <style name="ImageSliderTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/image_slider_tab_selector</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">@dimen/image_slider_width</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>
</resources>
