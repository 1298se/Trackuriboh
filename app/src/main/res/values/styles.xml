<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <!-- Components -->
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorDark</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimaryDark</item>
        <item name="tabTextColor">?attr/colorAccent</item>
        <item name="tabSelectedTextColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:color">?attr/colorPrimaryDark</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_outlined_states</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogShapeAppearance</item>
    </style>

    <style name="BottomSheetDialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ImageSliderViewPager" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingTop">@dimen/card_image_swipe_padding</item>
        <item name="android:paddingBottom">@dimen/card_image_swipe_padding</item>
    </style>

    <style name="ImageSliderTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/image_slider_tab_selector</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">@dimen/image_slider_width</item>
    </style>

    <style name="TextAppearance.Types.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Types.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Types.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
