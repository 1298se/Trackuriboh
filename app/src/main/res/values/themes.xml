<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green</item>
        <!-- Sets the color of menu items and other toolbar stuff -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="colorAccent">@color/dark_green</item>
        <item name="colorSecondary">@color/white</item>

        <!-- Sets the color of the back button for toolbar -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.AppTheme.BottomNavigationView</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.AppTheme.LinearProgressIndicator</item>
        <item name="tabStyle">@style/Widget.AppTheme.TabLayout</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.CardView</item>
        <item name="searchViewStyle">@style/Widget.AppTheme.SearchView</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.AppTheme.AutoCompleteTextView</item>
        <item name="snackbarStyle">@style/Widget.AppTheme.Snackbar</item>
    </style>

    <style name="ThemeOverlay.AppTheme.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
    </style>
</resources>