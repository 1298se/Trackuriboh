<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <!-- Sets the color of menu items and other toolbar stuff -->
        <item name="colorOnPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="android:colorBackground">@color/light_gray</item>

        <!-- Sets the color of the back button for toolbar -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.AppTheme.BottomNavigationView</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.AppTheme.LinearProgressIndicator</item>
        <item name="tabStyle">@style/Widget.AppTheme.TabLayout</item>
        <item name="materialCardViewStyle">@style/Widget.AppTheme.CardView</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AppTheme.BottomSheetDialog</item>

        <!-- Contextual action bar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <!-- Text Input -->
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>

        <!-- Dialog Buttons -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AppTheme.MaterialAlertDialog</item>


    </style>

    <style name="ThemeOverlay.AppTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.AppTheme.BottomSheet.Modal</item>

        <!-- Moves the bottom sheet dialog above the keyboard as per https://stackoverflow.com/questions/48002290/show-entire-bottom-sheet-with-edittext-above-keyboard-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- We need this theme to customize the SearchView itself. To change the cursor color, just change the color accent here! -->
    <style name="ThemeOverlay.AppTheme.Toolbar.SearchView" parent="AppTheme">
    </style>

    <style name="ThemeOverlay.AppTheme.LinearProgressIndicator" parent="">
        <item name="colorPrimary">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Secondary" parent="AppTheme">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorOnSurface">@color/gray</item>
    </style>

    <style name="ThemeOverlay.AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Button" parent="">
        <item name="colorPrimary">@color/light_green</item>
    </style>
</resources>