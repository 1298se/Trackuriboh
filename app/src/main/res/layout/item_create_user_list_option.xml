<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_one_line_height"
    android:paddingStart="@dimen/list_item_padding_horizontal"
    android:paddingEnd="@dimen/list_item_padding_horizontal"
    android:background="@drawable/background_color_surface_selectable">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_create_user_list_option_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?attr/colorOnSurface"
        tools:src="@drawable/ic_baseline_add_24dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_create_user_list_option_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:maxLines="1"
        android:layout_marginStart="@dimen/list_item_icon_content_spacing"
        app:layout_constraintStart_toEndOf="@id/item_create_user_list_option_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        tools:text="@string/create_user_list_option" />

</androidx.constraintlayout.widget.ConstraintLayout>