<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/new_transaction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_close_black_24dp"
        app:title="@string/lbl_new_transaction" />

    <View
        android:id="@+id/divider1"
        style="@style/Divider" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_transaction_name_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_border_padding"
        android:layout_marginEnd="@dimen/material_border_padding"
        android:layout_marginTop="16dp"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Blue-Eyes White Dragon" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/new_transaction_region_setcode_rarity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.ExposedDropdown"
            android:id="@+id/new_transaction_setcode_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:hint="Set Code">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="LOB-001" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.ExposedDropdown"
            android:id="@+id/new_transaction_rarity_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:hint="Rarity">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Ultra Rare" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_transaction_region_type_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.ExposedDropdown"
            android:id="@+id/new_transaction_type_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="4"
            android:hint="Transaction Type">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Purchase" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.ExposedDropdown"
            android:id="@+id/new_transaction_platform_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:hint="Platform">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="none"
                tools:text="Ebay" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_transaction_region_buyer_seller_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_transaction_buyer_seller_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:hint="Seller">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="Troll&amp;Toad" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_transaction_amount_textfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_border_padding"
            android:layout_marginEnd="@dimen/material_border_padding"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:hint="Amount">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="numberDecimal"
                tools:text="99.99" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_transaction_tracking_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Tracking Number">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="123456" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>