<?xml version="1.0" encoding="utf-8"?>

<!-- Need android:fillViewport="true" because it expands the
 scrollview content to fill the viewport -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ui_price.CardPricesBottomSheetDialogFragment">

    <LinearLayout
        android:id="@+id/sku_prices_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingTop="@dimen/list_padding_top"
        android:paddingStart="@dimen/list_padding_start"
        android:paddingEnd="@dimen/list_padding_end" />

</androidx.core.widget.NestedScrollView>
